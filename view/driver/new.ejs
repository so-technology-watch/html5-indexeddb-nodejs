<% include ../layout/templates/header %>
<% include ../layout/templates/navbar %>

<div class="container" id="entityList" a>
    <div class="panel panel-success">
        <div class="panel-heading"><h2>New Driver</h2></div>
        <div class="panel-body">
            <form id="driverForm" v-on:submit.prevent="save">
                <div class="form-group">
                    <label for="inputDriverFirstName">First name</label>
                    <input type="text" class="form-control"
                           v-model="driver.driver_firstName" placeholder="Enter Driver first name">
                </div>
                <div class="form-group">
                    <label for="inputDriverLastName">Last name</label>
                    <input type="text" class="form-control"
                           v-model="driver.driver_lastName" placeholder="Enter Driver last name">
                </div>
                <div class="form-group">
                    <label for="inputDriverCar">Car</label>
                    <input type="text" class="form-control"
                           v-model="driver.driver_car" placeholder="Enter Driver car">
                </div>
                <div id="warningMessage" class="alert alert-danger" v-bind:style="'display:'+error.display">
                    {{ error.errorCode }} : {{ error.message }}
                </div>
                <input type="submit" id="saveDriver" class="btn btn-success" value="Add a new entity">
                <a href="../../driver">
                    <button type="button" class="btn btn-info">Back to the list</button>
                </a>
            </form>
        </div>
    </div>
</div>

<script>
    formAddDriver();
</script>